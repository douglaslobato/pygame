# Este é um jogo de adivinhação
import random

guessesTaken = 0

print('Olá! Qual é o seu Nome?')
myName = input()

number = random.randint(1, 20)
print('Bom, ' + myName + ', Estou pensando em um número entre 1 a 20, você pode adivinhar? Tens apenas 6 tentativas.')

while guessesTaken < 6:
    print('Tente adivinhar.') # There are four spaces in front of print.
    guess = input()
    guess = int(guess)

    guessesTaken = guessesTaken + 1

    if guess < number:
        print('Está abaixo do número.') # There are eight spaces in front of print.

    if guess > number:
        print('Está acima do número.')

    if guess == number:
        break

if guess == number:
    guessesTaken = str(guessesTaken)
    print('Muito bem, ' + myName + '! Adivinhou meu número em ' + guessesTaken + ' tentativas!')

if guess != number:
    number = str(number)
    print('Não. o número que eu estava pensando era: ' + number)
